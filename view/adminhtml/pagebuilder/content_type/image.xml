<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="image">
        <appearances>
            <appearance name="full-width">
                <elements>
                    <element name="desktop_image">
                        <attribute name="explicit_width_desktop" source="width" />
                        <attribute name="explicit_height_desktop" source="height" />
                        <attribute name="image_loading" source="loading" />
                    </element>
                    <element name="mobile_image">
                        <attribute name="explicit_width_mobile" source="width" />
                        <attribute name="explicit_height_mobile" source="height" />
                        <attribute name="image_loading" source="loading" />
                    </element>
                </elements>
            </appearance>
        </appearances>
    </type>
</config>
